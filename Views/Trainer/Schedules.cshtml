@{
    ViewData["Title"] = "My Schedules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .fade-slide {
        animation: fadeSlide 0.9s ease-in-out;
    }

 

    .schedule-card {
        border-radius: 18px;
        transition: all 0.35s ease;
    }

        .schedule-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 14px 30px rgba(0,0,0,0.25);
        }

    .time-badge {
        font-size: 0.85rem;
        padding: 6px 12px;
        border-radius: 20px;
    }
</style>

<!-- PAGE HEADER -->
<div class="mb-4 fade-slide">
    <h2 class="fw-bold text-white">
        <i class="fa-solid fa-calendar-days me-2"></i> My Schedules
    </h2>
    <p class="text-light opacity-75">
        View your daily and upcoming training schedules.
    </p>
</div>

