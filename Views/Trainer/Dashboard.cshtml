@{
    ViewData["Title"] = "Trainer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* DASHBOARD ANIMATIONS */
    .fade-slide {
        animation: fadeSlide 1s ease-in-out;
    }

     

    .stat-card {
        border-radius: 18px;
        transition: all 0.35s ease;
        cursor: pointer;
    }

        .stat-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 18px 40px rgba(0,0,0,0.25);
        }

    .quick-card {
        border-radius: 20px;
        transition: all 0.3s ease;
    }

        .quick-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.2);
        }
</style>

<!-- PAGE HEADER -->
<div class="mb-4 fade-slide">
    <h2 class="fw-bold text-white">
        <i class="fa-solid fa-dumbbell me-2"></i> Trainer Dashboard
    </h2>
    <p class="text-light opacity-75">
        Manage your schedules, track attendance, and guide members effectively.
    </p>
</div>

<!-- STATISTICS SECTION -->
<div class="row g-4 mb-5 fade-slide">

    <div class="col-md-3">
        <div class="card stat-card p-4 text-center">
            <i class="fa-solid fa-users fa-2x text-primary mb-2"></i>
            <h6>Total Trainees</h6>
            <h3 class="fw-bold">48</h3>
            <small class="text-primary">Assigned Members</small>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card stat-card p-4 text-center">
            <i class="fa-solid fa-calendar-check fa-2x text-success mb-2"></i>
            <h6>Today’s Sessions</h6>
            <h3 class="fw-bold">6</h3>
            <small class="text-success">Scheduled Batches</small>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card stat-card p-4 text-center">
            <i class="fa-solid fa-qrcode fa-2x text-warning mb-2"></i>
            <h6>Attendance Today</h6>
            <h3 class="fw-bold">41</h3>
            <small class="text-warning">Marked via QR</small>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card stat-card p-4 text-center">
            <i class="fa-solid fa-video fa-2x text-info mb-2"></i>
            <h6>Workout Videos</h6>
            <h3 class="fw-bold">12</h3>
            <small class="text-info">Uploaded</small>
        </div>
    </div>

</div>

<!-- QUICK ACTIONS -->
<div class="row g-4 mb-5 fade-slide">

    <div class="col-md-6">
        <div class="card quick-card p-4">
            <h5 class="fw-semibold mb-3">
                <i class="fa-solid fa-calendar-days me-2"></i> My Schedules
            </h5>
            <p class="opacity-75">
                View your assigned training schedules and batch timings.
            </p>
            <a asp-controller="Trainer"
               asp-action="Schedules"
               class="btn btn-primary w-100">
                View Schedules
            </a>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card quick-card p-4">
            <h5 class="fw-semibold mb-3">
                <i class="fa-solid fa-qrcode me-2"></i> Attendance
            </h5>
            <p class="opacity-75">
                View and manage trainee attendance using QR codes.
            </p>
            <a asp-controller="Trainer"
               asp-action="Attendance"
               class="btn btn-primary w-100">
                View Attendance
            </a>
        </div>
    </div>

</div>

<!-- TRAINER TASKS -->
<div class="card p-4 fade-slide">
    <h5 class="fw-semibold mb-3">
        <i class="fa-solid fa-list-check me-2"></i> Today’s Tasks
    </h5>

    <ul class="list-group list-group-flush">
        <li class="list-group-item bg-transparent text-white border-0">
            Morning Batch – Strength Training (6:00 AM)
        </li>
        <li class="list-group-item bg-transparent text-white border-0">
            Cardio Session – Weight Loss Group (9:00 AM)
        </li>
        <li class="list-group-item bg-transparent text-white border-0">
            Evening Yoga Session (6:30 PM)
        </li>
    </ul>

    <a asp-controller="Trainer"
       asp-action="Tasks"
       class="btn btn-outline-info mt-3">
        View All Tasks
    </a>
</div>
