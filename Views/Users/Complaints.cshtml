@{
    ViewData["Title"] = "Complaints & Support";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .fade-slide {
        animation: fadeSlide 1s ease-in-out;
    }

  

    .complaint-card {
        border-radius: 20px;
        transition: all 0.35s ease;
    }

        .complaint-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 40px rgba(0,0,0,0.25);
        }

    .status-badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.85rem;
    }
</style>

<!-- PAGE HEADER -->
<div class="mb-4 fade-slide">
    <h2 class="fw-bold text-white">
        <i class="fa-solid fa-headset me-2"></i> Complaints & Support
    </h2>
    <p class="text-light opacity-75">
        Raise issues or queries and track their resolution status.
    </p>
</div>

<!-- RAISE COMPLAINT -->
<div class="card complaint-card p-4 mb-5 fade-slide">
    <h5 class="fw-semibold mb-3">
        <i class="fa-solid fa-pen-to-square me-2"></i> Raise a New Complaint
    </h5>

    <form>
        <div class="row g-3">

            <div class="col-md-6">
                <label class="form-label">Complaint Subject</label>
                <input type="text"
                       class="form-control"
                       placeholder="Enter complaint subject" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Category</label>
                <select class="form-select">
                    <option>Equipment Issue</option>
                    <option>Trainer Support</option>
                    <option>Membership</option>
                    <option>Payment</option>
                    <option>Other</option>
                </select>
            </div>

            <div class="col-md-12">
                <label class="form-label">Description</label>
                <textarea class="form-control"
                          rows="4"
                          placeholder="Describe your issue in detail"></textarea>
            </div>

            <div class="col-md-12 text-end mt-3">
                <button type="button" class="btn btn-primary px-4">
                    <i class="fa-solid fa-paper-plane me-1"></i>
                    Submit Complaint
                </button>
            </div>

        </div>
    </form>
</div>

<!-- COMPLAINT HISTORY -->
<div class="card p-4 fade-slide">
    <h5 class="fw-semibold mb-3">
        <i class="fa-solid fa-clock-rotate-left me-2"></i> Complaint History
    </h5>

    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Subject</th>
                    <th>Category</th>
                    <th>Submitted On</th>
                    <th>Status</th>
                    <th>Reply</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>1</td>
                    <td>Equipment Issue</td>
                    <td>Equipment</td>
                    <td>10 Sep 2025</td>
                    <td>
                        <span class="badge bg-warning text-dark status-badge">
                            In Progress
                        </span>
                    </td>
                    <td class="text-muted">
                        Technician assigned
                    </td>
                </tr>

                <tr>
                    <td>2</td>
                    <td>Trainer Availability</td>
                    <td>Trainer Support</td>
                    <td>05 Sep 2025</td>
                    <td>
                        <span class="badge bg-success status-badge">
                            Resolved
                        </span>
                    </td>
                    <td>
                        Trainer assigned to your batch
                    </td>
                </tr>

                <tr>
                    <td>3</td>
                    <td>Membership Freeze</td>
                    <td>Membership</td>
                    <td>01 Sep 2025</td>
                    <td>
                        <span class="badge bg-secondary status-badge">
                            Closed
                        </span>
                    </td>
                    <td>
                        Membership frozen successfully
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
