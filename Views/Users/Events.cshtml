@{
    ViewData["Title"] = "Fitness Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .fade-slide {
        animation: fadeSlide 1s ease-in-out;
    }

    

    .event-card {
        border-radius: 22px;
        transition: all 0.35s ease;
        overflow: hidden;
    }

        .event-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 18px 40px rgba(0,0,0,0.25);
        }

    .event-banner {
        height: 140px;
        background: linear-gradient(135deg, #ff512f, #dd2476);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2.5rem;
    }

    .badge-pill {
        padding: 8px 16px;
        border-radius: 20px;
    }
</style>

<!-- PAGE HEADER -->
<div class="mb-4 fade-slide">
    <h2 class="fw-bold text-white">
        <i class="fa-solid fa-calendar-days me-2"></i> Fitness Events
    </h2>
    <p class="text-light opacity-75">
        Explore and register for upcoming fitness events and programs.
    </p>
</div>

<!-- UPCOMING EVENTS -->
<div class="row g-4 mb-5 fade-slide">

    <!-- EVENT CARD -->
    <div class="col-md-4">
        <div class="card event-card">
            <div class="event-banner">
                <i class="fa-solid fa-heart-pulse"></i>
            </div>
            <div class="p-4">
                <h5 class="fw-bold mb-2">Yoga Wellness Camp</h5>
                <p class="text-muted mb-2">
                    Improve flexibility, posture, and mental wellness.
                </p>

                <p class="mb-1"><strong>Date:</strong> 20 Sep 2025</p>
                <p class="mb-1"><strong>Time:</strong> 6:00 AM – 8:00 AM</p>
                <p class="mb-3"><strong>Location:</strong> Studio Hall</p>

                <span class="badge bg-success badge-pill mb-3">
                    Upcoming
                </span>

                <div class="d-grid">
                    <button class="btn btn-primary">
                        Register
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- EVENT CARD -->
    <div class="col-md-4">
        <div class="card event-card">
            <div class="event-banner" style="background: linear-gradient(135deg,#11998e,#38ef7d);">
                <i class="fa-solid fa-fire"></i>
            </div>
            <div class="p-4">
                <h5 class="fw-bold mb-2">HIIT Bootcamp</h5>
                <p class="text-muted mb-2">
                    High-intensity interval training for fat loss.
                </p>

                <p class="mb-1"><strong>Date:</strong> 25 Sep 2025</p>
                <p class="mb-1"><strong>Time:</strong> 7:00 AM – 8:00 AM</p>
                <p class="mb-3"><strong>Location:</strong> Main Gym Floor</p>

                <span class="badge bg-success badge-pill mb-3">
                    Upcoming
                </span>

                <div class="d-grid">
                    <button class="btn btn-primary">
                        Register
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- EVENT CARD -->
    <div class="col-md-4">
        <div class="card event-card">
            <div class="event-banner" style="background: linear-gradient(135deg,#8360c3,#2ebf91);">
                <i class="fa-solid fa-dumbbell"></i>
            </div>
            <div class="p-4">
                <h5 class="fw-bold mb-2">Strength Training Workshop</h5>
                <p class="text-muted mb-2">
                    Learn correct form and lifting techniques.
                </p>

                <p class="mb-1"><strong>Date:</strong> 30 Sep 2025</p>
                <p class="mb-1"><strong>Time:</strong> 6:30 PM – 8:00 PM</p>
                <p class="mb-3"><strong>Location:</strong> Outdoor Arena</p>

                <span class="badge bg-warning text-dark badge-pill mb-3">
                    Registration Closed
                </span>

                <div class="d-grid">
                    <button class="btn btn-secondary" disabled>
                        Closed
                    </button>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- REGISTERED EVENTS -->
<div class="card p-4 fade-slide">
    <h5 class="fw-semibold mb-3">
        <i class="fa-solid fa-check-circle me-2"></i> My Registered Events
    </h5>

    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Event Name</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>1</td>
                    <td>Yoga Wellness Camp</td>
                    <td>20 Sep 2025</td>
                    <td>Studio Hall</td>
                    <td><span class="badge bg-success">Registered</span></td>
                    <td>
                        <button class="btn btn-sm btn-outline-danger">
                            Cancel
                        </button>
                    </td>
                </tr>

                <tr>
                    <td>2</td>
                    <td>HIIT Bootcamp</td>
                    <td>25 Sep 2025</td>
                    <td>Main Gym Floor</td>
                    <td><span class="badge bg-success">Registered</span></td>
                    <td>
                        <button class="btn btn-sm btn-outline-danger">
                            Cancel
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
