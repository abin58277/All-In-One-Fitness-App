@{
    ViewData["Title"] = "My Membership";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .fade-slide {
        animation: fadeSlide 1s ease-in-out;
    }

   

    .membership-card {
        border-radius: 22px;
        transition: all 0.35s ease;
    }

        .membership-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 40px rgba(0,0,0,0.25);
        }

    .plan-badge {
        font-size: 1rem;
        padding: 8px 20px;
        border-radius: 30px;
    }
</style>

<!-- PAGE HEADER -->
<div class="mb-4 fade-slide">
    <h2 class="fw-bold text-white">
        <i class="fa-solid fa-id-card me-2"></i> My Membership
    </h2>
    <p class="text-light opacity-75">
        View your membership plan, validity, and benefits.
    </p>
</div>

<!-- CURRENT MEMBERSHIP -->
<div class="row g-4 mb-5 fade-slide">

    <div class="col-md-6">
        <div class="card membership-card p-4">
            <h5 class="fw-semibold mb-3">
                <i class="fa-solid fa-crown me-2 text-warning"></i> Active Plan
            </h5>

            <h3 class="fw-bold mb-2">Gold Membership</h3>

            <span class="badge bg-success plan-badge mb-3">
                Active
            </span>

            <p class="mb-2"><strong>Start Date:</strong> 01 Jan 2025</p>
            <p class="mb-2"><strong>End Date:</strong> 31 Dec 2025</p>
            <p class="mb-2"><strong>Duration:</strong> 12 Months</p>

            <div class="mt-4">
                <button class="btn btn-warning me-2">
                    <i class="fa-solid fa-pause me-1"></i> Freeze Membership
                </button>

                <button class="btn btn-outline-danger">
                    <i class="fa-solid fa-circle-xmark me-1"></i> Cancel
                </button>
            </div>
        </div>
    </div>

    <!-- BENEFITS -->
    <div class="col-md-6">
        <div class="card membership-card p-4">
            <h5 class="fw-semibold mb-3">
                <i class="fa-solid fa-star me-2"></i> Membership Benefits
            </h5>

            <ul class="list-group list-group-flush">
                <li class="list-group-item bg-transparent text-white border-0">
                    ✔ Unlimited gym access
                </li>
                <li class="list-group-item bg-transparent text-white border-0">
                    ✔ Access to all workout videos
                </li>
                <li class="list-group-item bg-transparent text-white border-0">
                    ✔ Expert health guidance
                </li>
                <li class="list-group-item bg-transparent text-white border-0">
                    ✔ Free entry to fitness events
                </li>
                <li class="list-group-item bg-transparent text-white border-0">
                    ✔ Diet & nutrition plans
                </li>
            </ul>
        </div>
    </div>

</div>

<!-- MEMBERSHIP HISTORY -->
<div class="card p-4 fade-slide">
    <h5 class="fw-semibold mb-3">
        <i class="fa-solid fa-clock-rotate-left me-2"></i> Membership History
    </h5>

    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Plan</th>
                    <th>Duration</th>
                    <th>Amount Paid</th>
                    <th>Status</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>1</td>
                    <td>Gold Plan</td>
                    <td>Jan 2025 – Dec 2025</td>
                    <td>₹ 12,000</td>
                    <td><span class="badge bg-success">Active</span></td>
                </tr>

                <tr>
                    <td>2</td>
                    <td>Silver Plan</td>
                    <td>Jan 2024 – Dec 2024</td>
                    <td>₹ 8,000</td>
                    <td><span class="badge bg-secondary">Completed</span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
