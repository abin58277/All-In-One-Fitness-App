@{
    ViewData["Title"] = "My Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .fade-slide {
        animation: fadeSlide 1s ease-in-out;
    }

   

    .attendance-card {
        border-radius: 20px;
        transition: all 0.35s ease;
    }

        .attendance-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 40px rgba(0,0,0,0.25);
        }

    .qr-box {
        border: 2px dashed #0d6efd;
        border-radius: 20px;
        padding: 30px;
        text-align: center;
    }

    .progress {
        height: 10px;
        border-radius: 20px;
    }
</style>

<!-- PAGE HEADER -->
<div class="mb-4 fade-slide">
    <h2 class="fw-bold text-white">
        <i class="fa-solid fa-qrcode me-2"></i> My Attendance
    </h2>
    <p class="text-light opacity-75">
        Track your gym attendance and view your session history.
    </p>
</div>

<!-- TODAY STATUS -->
<div class="row g-4 mb-5 fade-slide">

    <div class="col-md-4">
        <div class="card attendance-card p-4 text-center">
            <i class="fa-solid fa-calendar-day fa-2x text-primary mb-2"></i>
            <h6>Today</h6>
            <h4 class="fw-bold text-success">Present</h4>
            <small class="text-success">Checked in at 6:12 AM</small>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card attendance-card p-4 text-center">
            <i class="fa-solid fa-calendar-check fa-2x text-success mb-2"></i>
            <h6>Total Sessions</h6>
            <h3 class="fw-bold">22</h3>
            <small class="text-success">This Month</small>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card attendance-card p-4 text-center">
            <i class="fa-solid fa-percent fa-2x text-warning mb-2"></i>
            <h6>Attendance Rate</h6>
            <h3 class="fw-bold">88%</h3>
            <small class="text-warning">Excellent</small>
        </div>
    </div>

</div>

<!-- QR CHECK-IN -->
<div class="row g-4 mb-5 fade-slide">

    <div class="col-md-6">
        <div class="card p-4">
            <h5 class="fw-semibold mb-3">
                <i class="fa-solid fa-qrcode me-2"></i> QR Check-In
            </h5>

            <div class="qr-box">
                <i class="fa-solid fa-qrcode fa-4x text-primary mb-3"></i>
                <p class="opacity-75 mb-0">
                    Scan the QR code at the gym entrance to mark attendance.
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card p-4">
            <h5 class="fw-semibold mb-3">
                <i class="fa-solid fa-circle-info me-2"></i> How It Works
            </h5>

            <ul class="list-group list-group-flush">
                <li class="list-group-item bg-transparent text-white border-0">
                    ✔ QR code is generated daily
                </li>
                <li class="list-group-item bg-transparent text-white border-0">
                    ✔ Scan once per session
                </li>
                <li class="list-group-item bg-transparent text-white border-0">
                    ✔ Attendance is auto-recorded
                </li>
            </ul>
        </div>
    </div>

</div>

<!-- ATTENDANCE PROGRESS -->
<div class="card p-4 mb-5 fade-slide">
    <h5 class="fw-semibold mb-3">
        <i class="fa-solid fa-chart-line me-2"></i> Monthly Progress
    </h5>

    <p class="mb-2"><strong>Goal:</strong> 25 Sessions</p>

    <div class="progress mb-2">
        <div class="progress-bar bg-success" style="width: 88%"></div>
    </div>

    <small class="text-success">22 / 25 sessions completed</small>
</div>

<!-- ATTENDANCE HISTORY -->
<div class="card p-4 fade-slide">
    <h5 class="fw-semibold mb-3">
        <i class="fa-solid fa-clock-rotate-left me-2"></i> Attendance History
    </h5>

    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>Session</th>
                    <th>Check-In Time</th>
                    <th>Status</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>1</td>
                    <td>10 Sep 2025</td>
                    <td>Morning Strength</td>
                    <td>6:12 AM</td>
                    <td><span class="badge bg-success">Present</span></td>
                </tr>

                <tr>
                    <td>2</td>
                    <td>09 Sep 2025</td>
                    <td>Cardio</td>
                    <td>9:05 AM</td>
                    <td><span class="badge bg-success">Present</span></td>
                </tr>

                <tr>
                    <td>3</td>
                    <td>08 Sep 2025</td>
                    <td>Yoga</td>
                    <td>—</td>
                    <td><span class="badge bg-danger">Absent</span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
