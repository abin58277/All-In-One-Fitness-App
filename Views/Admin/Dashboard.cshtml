@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- PAGE HEADER -->
<div class="mb-4">
    <h2 class="fw-bold text-white">
        <i class="fa-solid fa-gauge-high me-2"></i> Admin Dashboard
    </h2>
    <p class="text-light opacity-75">
        Manage members, trainers, experts, events and reports from one place.
    </p>
</div>

<!-- STATS CARDS -->
<div class="row g-4 mb-5">

    <div class="col-md-3">
        <div class="card text-center p-4">
            <i class="fa-solid fa-users fa-2x mb-3 text-info"></i>
            <h5>Total Members</h5>
            <h2 class="fw-bold">248</h2>
            <small class="text-success">+12 this month</small>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center p-4">
            <i class="fa-solid fa-person-running fa-2x mb-3 text-warning"></i>
            <h5>Trainers</h5>
            <h2 class="fw-bold">18</h2>
            <small class="text-info">Active</small>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center p-4">
            <i class="fa-solid fa-user-doctor fa-2x mb-3 text-success"></i>
            <h5>Experts</h5>
            <h2 class="fw-bold">6</h2>
            <small class="text-info">Available</small>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center p-4">
            <i class="fa-solid fa-indian-rupee-sign fa-2x mb-3 text-success"></i>
            <h5>Monthly Revenue</h5>
            <h2 class="fw-bold">₹1,25,000</h2>
            <small class="text-success">+8%</small>
        </div>
    </div>

</div>

<!-- QUICK ACTIONS -->
<div class="row g-4 mb-5">

    <div class="col-md-4">
        <div class="card p-4">
            <h5 class="fw-semibold mb-3">
                <i class="fa-solid fa-id-card me-2"></i> Memberships
            </h5>
            <p class="opacity-75">
                Create, update and manage membership plans.
            </p>
            <a asp-action="Memberships" class="btn btn-primary w-100">
                Manage Memberships
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card p-4">
            <h5 class="fw-semibold mb-3">
                <i class="fa-solid fa-person-running me-2"></i> Trainers
            </h5>
            <p class="opacity-75">
                Assign schedules and manage trainers.
            </p>
            <a asp-action="Trainers" class="btn btn-primary w-100">
                Manage Trainers
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card p-4">
            <h5 class="fw-semibold mb-3">
                <i class="fa-solid fa-user-doctor me-2"></i> Experts
            </h5>
            <p class="opacity-75">
                Add and monitor fitness experts.
            </p>
            <a asp-action="Experts" class="btn btn-primary w-100">
                Manage Experts
            </a>
        </div>
    </div>

</div>

<!-- RECENT ACTIVITIES & EVENTS -->
<div class="row g-4 mb-5">

    <div class="col-md-6">
        <div class="card p-4">
            <h5 class="fw-semibold mb-3">
                <i class="fa-solid fa-clock-rotate-left me-2"></i> Recent Activities
            </h5>

            <ul class="list-group list-group-flush">
                <li class="list-group-item bg-transparent text-white border-0">
                    New member <strong>Rahul</strong> joined Gold Plan
                </li>
                <li class="list-group-item bg-transparent text-white border-0">
                    Trainer <strong>Arjun</strong> uploaded new workout video
                </li>
                <li class="list-group-item bg-transparent text-white border-0">
                    Event <strong>Yoga Day</strong> created
                </li>
            </ul>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card p-4">
            <h5 class="fw-semibold mb-3">
                <i class="fa-solid fa-calendar-check me-2"></i> Upcoming Events
            </h5>

            <ul class="list-group list-group-flush">
                <li class="list-group-item bg-transparent text-white border-0">
                    🗓️ Yoga Workshop – 20 Sept
                </li>
                <li class="list-group-item bg-transparent text-white border-0">
                    🗓️ Zumba Session – 25 Sept
                </li>
                <li class="list-group-item bg-transparent text-white border-0">
                    🗓️ Fitness Bootcamp – 30 Sept
                </li>
            </ul>
        </div>
    </div>

</div>

<!-- SYSTEM STATUS -->
<div class="row g-4">

    <div class="col-md-12">
        <div class="card p-4">
            <h5 class="fw-semibold mb-3">
                <i class="fa-solid fa-shield-halved me-2"></i> System Status
            </h5>

            <div class="d-flex justify-content-between align-items-center">
                <span>Server Status</span>
                <span class="badge bg-success">Online</span>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-2">
                <span>Payment Gateway</span>
                <span class="badge bg-warning text-dark">Sandbox Mode</span>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-2">
                <span>Attendance System</span>
                <span class="badge bg-success">Active</span>
            </div>
        </div>
    </div>

</div>
