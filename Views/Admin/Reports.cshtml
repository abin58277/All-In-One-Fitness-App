        <table class="table table-dark table-hover align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Month</th>
                    <th>Total Payments</th>
                    <th>Revenue</th>
                    <th>Status</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>1</td>
                    <td>January</td>
                    <td>120</td>
                    <td>₹ 95,000</td>
