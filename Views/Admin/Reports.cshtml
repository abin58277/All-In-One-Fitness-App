<!-- PAGE HEADER -->
<div class="mb-4">
    <h2 class="fw-bold text-white">
        <i class="fa-solid fa-chart-line me-2"></i> Reports
    </h2>
    <p class="text-light opacity-75">
        View monthly revenue, memberships, and payment statistics.
    </p>
</div>

<!-- SUMMARY CARDS -->
<div class="row g-4 mb-5">

    <div class="col-md-3">
        <div class="card p-4 text-center">
            <i class="fa-solid fa-indian-rupee-sign fa-2x text-success mb-2"></i>
            <h6>Total Revenue</h6>
            <h3 class="fw-bold">₹ 1,25,000</h3>
            <small class="text-success">This Month</small>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card p-4 text-center">
            <i class="fa-solid fa-users fa-2x text-info mb-2"></i>
            <h6>Total Members</h6>
            <h3 class="fw-bold">248</h3>
            <small class="text-info">Active Users</small>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card p-4 text-center">
            <i class="fa-solid fa-id-card fa-2x text-warning mb-2"></i>
            <h6>Membership Plans</h6>
            <h3 class="fw-bold">4</h3>
            <small class="text-warning">Available</small>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card p-4 text-center">
            <i class="fa-solid fa-calendar-check fa-2x text-primary mb-2"></i>
            <h6>Events Conducted</h6>
            <h3 class="fw-bold">12</h3>
            <small class="text-primary">This Year</small>
        </div>
    </div>

</div>

<!-- MONTHLY PAYMENT REPORT -->
