@model IEnumerable<All_In_One_Fitness_App.Models.Membership>

@{
    ViewData["Title"] = "Memberships";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- PAGE HEADER -->
<div class="mb-4">
    <h2 class="fw-bold text-white">
        <i class="fa-solid fa-id-card me-2"></i> Membership Plans
    </h2>
    <p class="text-light opacity-75">
        Manage fitness club membership programs.
    </p>
</div>

<!-- MEMBERSHIPS CARD -->
<div class="card p-4">

    <!-- TOP BAR -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <span class="badge bg-info fs-6 px-3 py-2">
            Total Plans: @(Model == null ? 0 : Model.Count())
        </span>

        <!-- Future use -->
        <button class="btn btn-primary" disabled>
            <i class="fa-solid fa-plus me-1"></i> Add Membership
        </button>
    </div>

    <!-- MEMBERSHIP TABLE -->
    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Plan Name</th>
                    <th>Fee</th>
                    <th>Duration</th>
                    <th>Status</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    int i = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>

                            <td>
                                <strong>@item.Name</strong>
                            </td>

                            <td>
                                ₹ @item.Fee
                            </td>

                            <td>
                                @item.DurationInMonths Months
                            </td>

                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>

                            <td class="text-center">
                                @if (item.IsActive)
                                {
                                    <form asp-controller="Admin"
                                          asp-action="DeactivateMembership"
                                          asp-route-id="@item.Id"
                                          method="post"
                                          class="d-inline">
                                        <button type="submit"
                                                class="btn btn-sm btn-warning text-dark">
                                            <i class="fa-solid fa-ban me-1"></i> Deactivate
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-controller="Admin"
                                          asp-action="ActivateMembership"
                                          asp-route-id="@item.Id"
                                          method="post"
                                          class="d-inline">
                                        <button type="submit"
                                                class="btn btn-sm btn-success">
                                            <i class="fa-solid fa-check me-1"></i> Activate
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-warning">
                            No membership plans found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
