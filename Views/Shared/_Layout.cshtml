@using Microsoft.AspNetCore.Http
@{
    var role = Context.Session.GetString("UserRole");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - All In One Fitness App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #0f172a;
            color: white;
        }

        .navbar {
            background: #020617;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 56px;
            left: 0;
            width: 230px;
            height: 100%;
            background: #020617;
            padding: 20px;
            transition: all 0.3s ease;
        }

            .sidebar.collapsed {
                width: 70px;
            }

            .sidebar a {
                display: flex;
                align-items: center;
                gap: 12px;
                padding: 10px 12px;
                margin-bottom: 8px;
                color: #cbd5f5;
                text-decoration: none;
                border-radius: 8px;
                transition: all 0.3s ease;
                font-weight: 500;
            }

                .sidebar a:hover {
                    background: #1e293b;
                    color: #38bdf8;
                }

                .sidebar a.active {
                    background: #2563eb;
                    color: white;
                }

            .sidebar.collapsed span {
                display: none;
            }

        /* Content */
        .content {
            margin-left: 250px;
            margin-top: 70px;
            padding: 25px;
            animation: fadeIn 0.5s ease-in-out;
            transition: all 0.3s ease;
        }

            .content.collapsed {
                margin-left: 90px;
            }

         

        footer {
            margin-left: 250px;
            text-align: center;
            padding: 15px;
            color: #94a3b8;
            transition: all 0.3s ease;
        }

            footer.collapsed {
                margin-left: 90px;
            }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <button class="btn btn-outline-light btn-sm me-3" id="toggleSidebar">
                <i class="fa fa-bars"></i>
            </button>

            <a class="navbar-brand">
                <i class="fa-solid fa-dumbbell"></i> All In One Fitness
            </a>

            <div class="ms-auto">
                <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Logout">
                    Logout
                </a>
            </div>
        </div>
    </nav>

    <!-- SIDEBAR -->
    @if (!string.IsNullOrEmpty(role))
    {
        <div class="sidebar">

            @if (role == "Admin")
            {
                <a asp-controller="Admin" asp-action="Dashboard"><i class="fa fa-gauge"></i><span>Dashboard</span></a>
                <a asp-controller="Admin" asp-action="Users"><i class="fa fa-users"></i><span>Users</span></a>
                <a asp-controller="Admin" asp-action="Memberships"><i class="fa fa-id-card"></i><span>Memberships</span></a>
                <a asp-controller="Admin" asp-action="Trainers"><i class="fa fa-person-running"></i><span>Trainers</span></a>
                <a asp-controller="Admin" asp-action="Experts"><i class="fa fa-user-doctor"></i><span>Experts</span></a>
                <a asp-controller="Admin" asp-action="Events"><i class="fa fa-calendar"></i><span>Events</span></a>
                <a asp-controller="Admin" asp-action="Reports"><i class="fa fa-chart-line"></i><span>Reports</span></a>
            }

            @if (role == "Trainer")
            {
                <a asp-controller="Trainer" asp-action="Dashboard"><i class="fa fa-gauge"></i><span>Dashboard</span></a>
                <a asp-controller="Trainer" asp-action="Schedules"><i class="fa fa-clock"></i><span>Schedules</span></a>
                <a asp-controller="Trainer" asp-action="Attendance"><i class="fa fa-clipboard-check"></i><span>Attendance</span></a>
                <a asp-controller="Trainer" asp-action="Videos"><i class="fa fa-video"></i><span>Videos</span></a>
            }

            @if (role == "Expert")
            {
                <a asp-controller="Expert" asp-action="Dashboard"><i class="fa fa-gauge"></i><span>Dashboard</span></a>
                <a asp-controller="Expert" asp-action="Interactions"><i class="fa fa-comments"></i><span>Interactions</span></a>
                <a asp-controller="Expert" asp-action="HealthTips"><i class="fa fa-heart-pulse"></i><span>Health Tips</span></a>
                <a asp-controller="Expert" asp-action="Complaints"><i class="fa fa-headset"></i><span>Complaints</span></a>
            }

            @if (role == "Users")
            {
                <a asp-controller="Users" asp-action="Dashboard"><i class="fa fa-gauge"></i><span>Dashboard</span></a>
                <a asp-controller="Users" asp-action="Profile"><i class="fa fa-user"></i><span>Profile</span></a>
                <a asp-controller="Users" asp-action="Membership"><i class="fa fa-id-card"></i><span>Membership</span></a>
                <a asp-controller="Users" asp-action="Attendance"><i class="fa fa-qrcode"></i><span>Attendance</span></a>
                <a asp-controller="Users" asp-action="Events"><i class="fa fa-calendar-days"></i><span>Events</span></a>
                <a asp-controller="Users" asp-action="HealthTips"><i class="fa fa-heart-pulse"></i><span>Health Tips</span></a>
                <a asp-controller="Users" asp-action="Complaints"><i class="fa fa-headset"></i><span>Complaints</span></a>
            }
        </div>
    }

    <!-- MAIN CONTENT -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer>
        © @DateTime.Now.Year | All In One Fitness App
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Sidebar toggle
        const btn = document.getElementById("toggleSidebar");
        const sidebar = document.querySelector(".sidebar");
        const content = document.querySelector(".content");
        const footer = document.querySelector("footer");

        btn.addEventListener("click", () => {
            sidebar.classList.toggle("collapsed");
            content.classList.toggle("collapsed");
            footer.classList.toggle("collapsed");
        });

        // Active menu highlight
        document.querySelectorAll('.sidebar a').forEach(link => {
            if (link.href === window.location.href) {
                link.classList.add('active');
            }
        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>
